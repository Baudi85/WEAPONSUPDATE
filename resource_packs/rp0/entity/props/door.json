{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "xp:door",
      "materials": { "default": "entity_alphatest" },
      "textures": { "default": "textures/entity/door_rooted" },
      "geometry": { "default": "geometry.door_rooted" },
      "render_controllers": [ "controller.render.default" ],
      "scripts": { "animate": [ "align", "setup" ] },
      "animations": { 
        "align": "animation.prop.align",
        "open": "animation.prop.open",
        "close_hold": "animation.prop.close_hold",
        "close": "animation.prop.close",

        "setup": "controller.animation.door_setup"
      },
      "spawn_egg": {
        "base_color": "#463716",
        "overlay_color": "#686868"
      },
      "sound_effects": {
        "open": "cool sfx here",
        "close": "cool sfx here"
      },
      "particle_effects": {
        "base_scrape": "xp:door.base_scrape",
        "unlock": "xp:door.unlock",
        "close_impact": "xp:door.close_impact"
      }
    }
  }
}
