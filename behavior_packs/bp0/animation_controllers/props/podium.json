            { "elemental_sword": "q.skin_id == 16" },
            { "fire_sword": "q.skin_id == 17" },
            { "ocean_sword": "q.skin_id == 18" },
            { "thunder_sword": "q.skin_id == 19" },
            { "wither_sword": "q.skin_id == 20" }
          ]
        },
        "ice_sword": { "transitions": [ { "halt_runtime": "(q.life_time - v.t) > 0.1" } ], "on_entry": [ "v.t = q.life_time;", "/dialogue change @s podium_info_ice_sword" ] },
